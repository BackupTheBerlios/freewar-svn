<!-- une selection par default sera presente, intitulé "default"-->
<!-- <select>default</select>-->
<!-- options -->
<dragThreshold>3</dragThreshold>
<doubleClickTime>200</doubleClickTime>

<selects number="4">
	<select>one</select>
	<select>two</select>
	<select>attack</select> 
	<select>peon</select>
</selects>

<context name="frame">
  <keybind key="Esc">
    <action name="Execute">
      <execute>quit</execute>
    </action>
  </keybind>
</context>

<context name="units">

  <mousebind button="Left" action="Click">
    <action name="select">
      <select empty="yes"/>
    </action>
  </mousebind>
  <keybind key="S">
    <mousebind button="Left" action="Click">
      <action name="select">
	<select empty="no"/>
      </action>
    </mousebind>
  </keybind>
  <mousebind button="Right" action="Click">
    <action name="Attack"/>
  </mousebind>

</context>
